contract ArenaPresale is Ownable {

    using SafeERC20 for IERC20;

    struct Presale {
        bool whitelisted;
        uint256 depositAmount;
        uint256 tokenAmount;
        uint256 claimTX;
    }

    mapping (address => Presale) public presale;

    IERC20 arena;

    ICronaSwapRouter02 private router = ICronaSwapRouter02(0xcd7d16fB918511BF7269eC4f48d61D79Fb26f918);

    address USDT = 0x66e428c3f67a68878562e79A0234c1F83c208770;

    uint256 immutable tokensPerUSDT = 100;
    uint256 immutable denominator = 1000;

    uint256 totalCollected;
    uint256 hardCap = 500000*10**18;

    bool presaleActive = true;
    bool claimActive = false;
    uint256 firstClaimDate;
    uint256 ONE_MONTH = 60*60*24*30;


    constructor() {}

    /// @dev Public Functions

    /// @dev slippage: 1% = 10
    function depositToken(IERC20 token, uint256 amount) external {
        require(presaleActive, "Presale is paused/closed");
        require(amount > 0, "Amount must be greater than 0");

        address pairAddress = ICronaSwapFactory(router.factory()).getPair(router.WETH(), address(token));
        require(pairAddress != address(0), "Pair doesn't exist");

        token.safeTransferFrom(_msgSender(), address(this), amount);

        if (address(token) != router.WETH() && address(token) != USDT) {
            uint256 usdtBalanceBefore = IERC20(USDT).balanceOf(address(this));
            swapTokenToUSDT(address(token), amount);
            amount = IERC20(USDT).balanceOf(address(this)) - usdtBalanceBefore;
        } else if (address(token) == router.WETH()) {
            uint256 usdtBalanceBefore = IERC20(USDT).balanceOf(address(this));
            swapWCROtoUSDT(amount);
            amount = IERC20(USDT).balanceOf(address(this)) - usdtBalanceBefore;
        }

        require(totalCollected + amount <= hardCap, "HardCap would be exceeded");

        presale[_msgSender()].whitelisted = true;
        presale[_msgSender()].depositAmount += amount;
        presale[_msgSender()].tokenAmount = presale[_msgSender()].depositAmount * denominator / tokensPerUSDT;
        totalCollected += amount;
    }

    function claim() external {
        require(presale[_msgSender()].whitelisted, "Address not participated");
        require(claimActive, "Claim is not available yet");
        require(block.timestamp >= firstClaimDate, "First Claim date was not yet reached");
        uint256 timeInterval = calculateTimeInterval();
        require(timeInterval > presale[_msgSender()].claimTX, "Next claim is not yet available");

        uint256 claimTXs = timeInterval - presale[_msgSender()].claimTX;
        uint256 claimAmount = (presale[_msgSender()].tokenAmount / 10) * claimTXs;

        presale[_msgSender()].claimTX += claimTXs;
        arena.safeTransfer(_msgSender(), claimAmount);
    }

    /// @dev onlyOwner

    function closePresale(uint256 _firstClaimDate) external onlyOwner {
        presaleActive = false;
        if (_firstClaimDate != 0) {
            firstClaimDate = _firstClaimDate;
        }
    }

    function changePresaleStatus(bool value) external onlyOwner {
        presaleActive = value;
    }

    function withdrawFunds(IERC20 token) external onlyOwner {
        token.safeTransfer(owner(), token.balanceOf(address(this)));
    }

    function withdrawCRO() external onlyOwner {
        payable(owner()).transfer(address(this).balance);
    }

    function inPresale(address _address) external view returns (bool) {
        return presale[_address].whitelisted;
    }

    function depositAmount(address _address) external view returns (uint256) {
        return presale[_address].depositAmount;
    }
    
    function tokenAmount(address _address) external view returns (uint256) {
        return presale[_address].tokenAmount;
    }

    function canClaim(address _address) external view returns (bool) {
        uint256 timeInterval = calculateTimeInterval();
        if (timeInterval == 0 || !presale[_address].whitelisted) {
            return false;
        } else {
            uint256 diff = timeInterval - presale[_address].claimTX;
            if (diff > 0) {
                return true;
            } else {
                return false;
            }
        }
    }

    /// @dev Internal Functions

    function deposit() internal {
        require(presaleActive, "Presale is paused/closed");
        require(msg.value > 0, "Amount must be greater than 0");

        uint256 usdtBalanceBefore = IERC20(USDT).balanceOf(address(this));
        swapCROtoUSDT(msg.value);
        uint256 amount = IERC20(USDT).balanceOf(address(this)) - usdtBalanceBefore;

        require(totalCollected + amount <= hardCap, "HardCap would be exceeded");

        presale[_msgSender()].whitelisted = true;
        presale[_msgSender()].depositAmount += amount;
        presale[_msgSender()].tokenAmount = presale[_msgSender()].depositAmount * denominator / tokensPerUSDT;
        totalCollected += amount;
    }

    function swapTokenToUSDT(address token, uint256 amount) internal {
        IERC20(token).approve(address(router), amount);
        address[] memory path = new address[](3);
        path[0] = token;
        path[1] = router.WETH();
        path[2] = USDT;

        router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            amount,
            0,
            path,
            address(this),
            block.timestamp
        );
    }

    function swapWCROtoUSDT(uint256 amount) internal {
        IERC20(router.WETH()).approve(address(router), amount);
        address[] memory path = new address[](2);
        path[0] = router.WETH();
        path[1] = USDT;

        router.swapExactTokensForTokensSupportingFeeOnTransferTokens(
            amount,
            0,
            path,
            address(this),
            block.timestamp
        );
    }

    function swapCROtoUSDT(uint256 amount) internal {
        address[] memory path = new address[](2);
        path[0] = router.WETH();
        path[1] = USDT;

        router.swapExactETHForTokensSupportingFeeOnTransferTokens{value: amount}(
            0, 
            path, 
            address(this), 
            block.timestamp
        );
    }

    function calculateTimeInterval() internal view returns (uint256 timeInterval) {
        if (block.timestamp >= firstClaimDate) {
            timeInterval = 1 + (block.timestamp - firstClaimDate) / ONE_MONTH;
            if (timeInterval > 10) {
                timeInterval = 10;
            }
        } else {
            timeInterval = 0;
        }
    }
    
    receive() external payable {
        deposit();
    }

    fallback() external payable {
        deposit();
    }
}